@model EventsPlus.Models.Organizer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Creates the Create form with labels and input fields-->

<h1>Create</h1>

<h4>Organizer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrganizerLastName" class="control-label"></label>
                <input asp-for="OrganizerLastName" class="form-control" />
                <span asp-validation-for="OrganizerLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizerFirstName" class="control-label"></label>
                <input asp-for="OrganizerFirstName" class="form-control" />
                <span asp-validation-for="OrganizerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizerContactNumber" class="control-label"></label>
                <input asp-for="OrganizerContactNumber" class="form-control" />
                <span asp-validation-for="OrganizerContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizerEmailAddress" class="control-label"></label>
                <input asp-for="OrganizerEmailAddress" class="form-control" />
                <span asp-validation-for="OrganizerEmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
